@import './variable.styl'

page
  font-family -apple-system-font, Helvetica Neue, sans-serif
  font-size 16px
  background-color #fff
  color $text-color-main
  border-top 1rpx solid #eee

.bg-main
  background-color $bg-main
.bg-prime
  background-color $prime-color
  color white
.bg-second
  background-color $second-color
/* Used for the container with gray background color */
.bg-light
  background-color $bg-light
.bg-lighter
  background-color $bg-lighter
.bg-tag
  background-color $bg-tag
.bg-danger
  background-color $text-color-danger
  color white
.bg-white-border
  background-color white
  border 1rpx solid rgba(114,112,113,0.35)
.bg-hint
  background-color #FEF7EE

.bg-gradual-prime
  background-image linear-gradient(to left, $gradual-prime-from, $gradual-prime-to)
  color white
.bg-gradual-red
  background-image linear-gradient(to right, $gradual-red-from, $gradual-red-to)
  color white
.bg-gradual-cyan
  background-image linear-gradient(to left, $gradual-cyan-from, $gradual-cyan-to)
  color white
.bg-gradual-gray
  background-image linear-gradient(to left, $gradual-gray-from, $gradual-gray-to)
  color white

/* Text area */
.text-black
  color #000
.text-light
  color $text-color-light
.text-lighter
  color $text-color-lighter
.text-num
  font-weight bold
  // font-family STKaiti, KaiTi
.text-tag
  color $text-tag
.text-main
  color $text-color-main
.text-prime
  color $text-color-prime
.text-prime-red
  color #f03b2b
.text-danger
  color $text-color-danger
.text-normal
  font-weight normal
.text-title
  font-size 56rpx
.text-justify
  text-align justify
.text-break
  word-break break-all
.text-cuts
  display -webkit-box
  -webkit-box-orient vertical
  overflow hidden
  text-overflow ellipsis
  word-break break-all
  -webkit-line-clamp 1
.text-through
  text-decoration: line-through
.text-title
  font-size 56rpx

.text-cut-line-2
  -webkit-line-clamp 2
.text-cut-line-3
  -webkit-line-clamp 3
.text-cut-line-4
  -webkit-line-clamp 4
.text-cut-line-5
  -webkit-line-clamp 5

.line-prime
  border-color $prime-color
.line-second
  border-color $second-color
.line-light::after
  border-color rgba(114,112,113,0.1) !important
.line-m-gray
  border-color rgba(114,112,113,0.4) !important
.line-m-gray-light
  border-color rgba(114,112,113,0.3) !important
.line-m-gray-lighter
  border-color rgba(114,112,113,0.1) !important
.line-dark
  border 2rpx solid #6a6a6a
.line-red
  border 2rpx solid #f9ded9 !important
.solid-border
  border 1rpx solid
.solids-borders
  border 8rpx solid
.no-border
  &:after
    border: none
.no-padding
  padding 0 !important
.no-margin
  margin 0 !important
.line-height-normal
  line-height normal !important

.title-emphasize-prime
  position relative
  &:before
    content ''
    position absolute
    left -2rpx
    top 10%
    bottom 10%
    width 6rpx
    border-radius 10rpx
    background-color #ea2a2b

.title-emphasize-black
  position relative
  &:before
    content ''
    position absolute
    left -2rpx
    top 20%
    bottom 20%
    width 6rpx
    background-color #6a6a6a

.border-prime
  border 1rpx solid $prime-color
.round-button-prime
  color $prime-color
  border 1rpx solid $prime-color
  padding 5rpx 50rpx
  border-radius 50rpx

.mask
  background-color rgba(0, 0, 0, 0.6)

.badge
  padding 0 6rpx
  border-radius 4rpx

/* Used for the container with bottom fixed buttons */
.shoes
  &:after
    content ''
    display block
    height 120rpx
    background-color white
.shoes-lg
  &:after
    content ''
    display block
    height 150rpx
    background-color white
.shoes-xl
  &:after
    content ''
    display block
    height 170rpx
    background-color white

.response-h
  height 100%
.full-height
  height 100vh

.inline
  display inline
.inline-block
  display inline-block

.scroll-wrapper
  width 100%
  overflow hidden
  white-space nowrap

.absolute
  position absolute
.relative
  position relative
.fixed
  position fixed

.absolute.lr, .fixed.lr
  left 0
  right 0
.absolute.tb, .fixed.tb
  top 0
  bottom 0

.fixed.foot
  position fixed
  width 100%
  bottom 0
  z-index 1024

.opacity
  opacity: 0.5
.opacity-1
  opacity: 0.1
.opacity-2
  opacity: 0.2
.opacity-3
  opacity: 0.3
.opacity-4
  opacity: 0.4
.opacity-5
  opacity: 0.5
.opacity-6
  opacity: 0.6
.opacity-7
