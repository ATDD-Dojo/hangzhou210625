.opacity-9
  opacity: 0.9

.waterfall
  column-count 2
.waterfall-3
  column-count 3
.waterfall-item
  display inline-block
  width 100%
  text-align center
  margin-bottom 20rpx

.circle
  border-radius 50%

.circled
  border-radius 50%
  overflow hidden
.hidden
  display none !important
.flow-hidden
  overflow hidden

.shadow-top
  box-shadow -6rpx 0 10rpx 10rpx rgba(229, 229, 229, 0.4)
.shadow-bottom
  box-shadow 0 0 10rpx 2rpx rgba(229, 229, 229, 0.6)
.shadow-card
  box-shadow 0px 0px 8px 0px rgba(0,0,0,0.1)
  // box-shadow -1px 10px 16px 0 rgba(229, 229, 229, 0.4),0 6px 20px 0 rgba(229, 229, 229, 0.6)

.modal-bottom
  border-radius 16rpx 16rpx 0 0 !important

// new
.card-shadow
  box-shadow:0px 2px 20px 4px rgba(230,230,230,0.5)


.tab-page
  &:after
    content ''
    position fixed
    width 100%
    height 1rpx
    border-bottom 1rpx solid #eee
